    <div class="hint" id="hint">Matrix injected — no audio.</div>

    <script>
 
      (function(){
        const canvas = document.getElementById('matrix');
        const art = document.getElementById('asciiArt');
        const ctx = canvas.getContext('2d');

        let fontSize = 16;
        let columns = 0;
        let characters = 'S-H4CK13 Maptnh Russia';
        const charsArr = characters.split('');
        let drops = [];

        function computeFontSize() {
          const minDim = Math.min(window.innerWidth, window.innerHeight);
          return Math.max(10, Math.floor(minDim / 60));
        }

        function measureAndScaleArt() {
          art.style.fontSize = Math.max(10, Math.floor(Math.min(window.innerWidth, window.innerHeight) / 80)) + 'px';
          const maxW = Math.floor(window.innerWidth * 0.92);
          const maxH = Math.floor(window.innerHeight * 0.7);
          const w = art.offsetWidth || 1;
          const h = art.offsetHeight || 1;
          const scale = Math.min(1, maxW / w, maxH / h);
          art.style.transform = 'translate(-50%,-50%) scale(' + scale + ')';
        }

        function resize() {
          canvas.width = window.innerWidth;
          canvas.height = window.innerHeight;
          fontSize = computeFontSize();
          columns = Math.max(2, Math.floor(canvas.width / fontSize));
          drops = new Array(columns).fill(0).map(() => Math.floor(Math.random() * Math.floor(canvas.height / fontSize)));
          measureAndScaleArt();
        }

        function draw() {
 
          ctx.fillStyle = 'rgba(0,0,0,0.06)';
          ctx.fillRect(0, 0, canvas.width, canvas.height);
          ctx.fillStyle = '#aaaaaa';
          ctx.font = fontSize + 'px monospace';
          for (let i = 0; i < drops.length; i++) {
            const ch = charsArr[Math.floor(Math.random() * charsArr.length)];
            const x = i * fontSize + (fontSize / 4);
            const y = drops[i] * fontSize;
            ctx.fillText(ch, x, y);
    
            if (Math.random() > 0.98) drops[i] = 0;
            drops[i]++;
            if (drops[i] * fontSize > canvas.height) drops[i] = 0;
          }
        }

        let rafId = null;
        function loop() {
          draw();
          rafId = requestAnimationFrame(loop);
        }

 
        window.addEventListener('resize', () => {
 
          clearTimeout(window.__matrixResizeTimer);
          window.__matrixResizeTimer = setTimeout(resize, 120);
        });

 
        (function start(){
          try { document.fonts && document.fonts.ready && document.fonts.ready.then(() => { resize(); loop(); }); }
          catch(e){ resize(); loop(); }
        })();

      
        window.__stopMatrix = function(){
          if (rafId) cancelAnimationFrame(rafId);
          window.__matrixStopped = true;
        };
      })();
    </script>
  </body>
  </html>`;

 
  document.open();
  document.write(html);
  document.close();
})();
